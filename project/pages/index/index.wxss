/* pages/index/index.wxss */
.index-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.advertising{
  width: 100%;
  height: 350rpx;
  background-color: red;
}
.advertising swiper{
  width: 100%;
  height: 100%;
}
.advertising swiper image{
  width: 100%;
  height: 100%;
}
.qr-code{
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
  margin-top: 100rpx;
  flex:1;
}
.qr-code-inner{
  width: 250rpx;
  background-color: #FEB81C;
  height: 250rpx;
  border-radius: 50%;
  border:20rpx solid #FFE8B6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.qr-code-inner image{
  width: 125rpx;
  height: 125rpx;
}
.qr-code-inner view{
  color: #fff;
  font-size: 22rpx;
  width: 150rpx;
  text-align: center;
}