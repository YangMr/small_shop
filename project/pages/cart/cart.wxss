/* pages/cart/cart.wxss */
.cart-container{
  width: 100%;
  height: 100%;
  background-color: #F8F9F8;
}
.cart-list{
  width: 100%;
  padding-bottom: 158rpx;
}
.cart-list-item{
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  background-color: #F8F9F8;
  border-bottom:1px solid #ccc;
}
.cart-list-item .title{
  font-size: 28rpx;
}
.cart-list-item .desc{
  font-size:22rpx;
  color : #ccc;
  line-height: 1.8;
}
.cart-list-item .price{
  color: red;
  font-size: 28rpx;
  line-height: 1.8;
}
.cart-list-item .computed{
  display: inline-flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-top: 8rpx;
}
.cart-list-item .decrement{
  color: #FFA72A;
}
.cart-list-item .increment{
  background-color: #FFA72A;
  color: #fff;
}
.cart-list-item .decrement,.cart-list-item .increment{
  width: 60rpx;
  height: 60rpx;
  border:1px solid #FFA72A;
  border-radius: 50%;
  text-align: center;
  line-height: 60rpx;
}
.cart-list-item .num{
  width: 160rpx;
  height: 60rpx;
  border:1px solid #FFA72A;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin: 0 10rpx;
}
.cart-footer{
  position:fixed;
  bottom:0;
  left: 0;
  width: 100%;
}
.cart-total-price{
  background-color: #fff;
  border-top:1px solid #ccc;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  color: #ccc;
}
.cart-total-price text{
  color: red;
}
.cart-btn-group{
  display: flex;
  width: 100%;
  flex-direction: row;
  height: 88rpx;
  line-height: 88rpx;
}
.cart-btn-group .cart-btn-add{
  background-color: #FFA72A;
  color: #fff;
}
.cart-btn-group view{
  flex : 1;
  text-align: center;
}
.cart-btn-group .cart-btn-settlement{
  background-color: #FE0000;
  color: #fff;
}
.no-cart-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no-cart-container .text{
  color: #ccc;
  font-size: 24rpx;
  margin-top: 250rpx;
}
.no-cart-container image{
  width: 150rpx;
  height: 150rpx;
  margin-top: 100rpx;
}
.no-cart-container .button{
  width: 320rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: #FFA72A;
  font-size: 24rpx;
  margin-top: 100rpx;
}